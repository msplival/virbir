#!/usr/bin/bash

# mandatory
name="test-instance"

# defaults, but configurable 
cpus=4
mem=8G
disk=20G
imagefile=/mnt/enchilada/iso/Ubuntu/ubuntu-22.04.4-live-server-amd64.iso
pwd=mia123

file_USER_DATA=


virt-install \
    --name $name \
    --memory $mem \
    --vcpus=${cpus} \
    --osinfo ubuntu22.04 \
    --cdrom "${imagefile}" \
    --cloud-init="meta-data=./meta-data,user-data=<(cat ./user-data)" \
    --autoconsole graphical
